{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "../MyProjectAPI/logs/log-.txt",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]
  },
  "Jwt": {
    "Issuer": "MyProject",
    "Audience": "MyProject",
    "Authority": "MyProject",
    "JwtKey": "t34DTj4fF0xSU1ZhAjXFqhYD6nERvXV7",
    "LifeTime": 15,
    "RefreshTokenValidityInDays": 7
  },
  "AllowedHosts": "*"
}
